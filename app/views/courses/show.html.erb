<table>
  <tr>
    <th>Course</th>
    <th>Time Spent</th>
    <th>Completed?</th>
    <th>Date</th>
  </tr>
  <tr>
    <td><%= @course.name %></td>
    <td><%= @course.time_spent %></td>
    <td><%= @course.completed ? "Yes" : "No" %></td>
    <td><%= @course.date %></td>
  </tr>
</table>
<br>
<table>
  <tr>
    <th>Notes/Comments</th>
  </tr>
  <tr>
    <td><%= render @course.comments %></td>
  </tr>
</table>
<%= render 'comments/form' %>
<p>
  <%= link_to 'Delete Course', course_path(@course), method: :delete %>
</p>
<%= link_to 'Edit Course', edit_course_path %> | <%= link_to 'Back', courses_path %>