<%= form_for(@course) do |f| %>
  <ul>  
    <%= f.label :name %>:<br>
    <%= name_field(@course) %>
  </ul>  
  <ul>
    <%= f.label :hours_spent, "How much time did you spend on this lesson?" %><br>
    <%= f.number_field :hours_spent, min: 0 %> minutes
  </ul>    
  <ul>
    <%= f.label :completed, "Lesson completed? (Check if completed)" %>
    <%= f.check_box :completed %>
  </ul>    
  <ul>
    <%= f.submit "Add Course" %>
  </ul>
<% end %>
