<table>
  <tr>
    <th>Course &nbsp; &nbsp; &nbsp;</th>
    <th>Logged Hours &nbsp; &nbsp; &nbsp;</th>
    <th>Completed?</th>
    <th>Date</th>
  </tr>
  <% @courses.each do |course| %>
    <tr>
        <td><%= link_to course.name, course_path(course) %></td>
        <td><%= course.time_spent %></td>
        <td><%= course.completed ? "Yes" : "No" %></td>
        <td><%= course.date %></td>
    </tr>
  <% end %>
  <tr>
    <th>Total Hours</th>
    <td><%= @courses.total_hours %></td>
  </tr>
  <tr>
    <th>Total Courses Completed</th>
    <td><%= @courses.total_completed %> of <%= @courses.total_lessons %></td>
  </tr>
</table>
<p><%= link_to 'Add New Course', new_course_path %></p>